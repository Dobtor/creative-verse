<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="dobtor.request.description.modal">
        <div>
            <form class="d-flex flex-column" method="post" id="request_modal">
                <input type="hidden" name="csrf_token" t-att-value="csrf_token"/>

                <div class="form-group">
                    <label for="description" class="control-label">Description:</label>
                    <textarea id="note" name="note" class="form-control" required="required"></textarea>
                </div>

            </form>
        </div>
    </t>
</templates>